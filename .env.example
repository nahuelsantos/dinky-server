# Project Configuration
PROJECT=dinky
REGISTRY=example
TAG=latest
SERVER_IP=127.0.0.1
ENVIRONMENT=docker

# Domain Configuration
DOMAIN_NAME=example.com
MAIL_DOMAIN=example.com
BASE_DOMAIN=example.com
API_URL=api.example.com
ALLOWED_HOSTS=example.com,example-2.com

# Mail Server Configuration
MAIL_USER=admin
MAIL_PASSWORD=your-secure-mail-password
DEFAULT_TO=hi@example.com
DEFAULT_FROM=hi@example.com
FORWARD_EMAIL=your-personal-email@example.com
MAIL_HOSTNAME=mail.example.com

# SMTP Relay Configuration (Gmail)
SMTP_RELAY_HOST=smtp.gmail.com
SMTP_RELAY_PORT=587
SMTP_RELAY_USERNAME=your-gmail-username@gmail.com
SMTP_RELAY_PASSWORD=your-gmail-app-password
USE_TLS=yes
TLS_VERIFY=yes

# Optional Mail Configuration
MAIL_SECURE=false
MAIL_PORT=25

# Cloudflared settings
TUNNEL_ID=your-tunnel-id-here
TUNNEL_TOKEN=your-tunnel-token-here

# Pihole settings
PIHOLE_PASSWORD=your-pihole-password

# Grafana settings
GRAFANA_PASSWORD=your-grafana-password 

# Argus settings
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
LOKI_URL=http://loki:3100
TEMPO_URL=http://tempo:3200